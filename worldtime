printf " 🇯🇵  Tokyo       $(env TZ="Asia/Tokyo" date +'%a %l:%M %P  %z %Z')\n"
printf " 🇦🇺  Sydney      $(env TZ="Australia/Sydney" date +'%a %l:%M %P  %z %Z')\n"
