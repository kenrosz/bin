printf " 🇺🇸  Mountain    $(env TZ="US/Mountain" date +'%a %l:%M %P  %z %Z')\n"
printf " 🇺🇸  Chicago     $(env TZ="America/Chicago" date +'%a %l:%M %P  %z %Z')\n"
printf " 🇺🇸  Miami       $(env TZ="America/New_York" date +'%a %l:%M %P  %z %Z')\n"
printf " 🏳️  \x1b[34mUTC         $(date -u +'%a %l:%M %P  %z %Z')\x1b[0m\n"
printf " 🇬🇧  London      $(env TZ="Europe/London" date +'%a %l:%M %P  %z %Z')\n"
printf " 🇨🇭  Zurich      $(env TZ="Europe/Zurich" date +'%a %l:%M %P  %z %Z')\n"
printf " 🇭🇰  Hong Kong   $(env TZ="Asia/Hong_Kong" date +'%a %l:%M %P  %z %Z')\n"
